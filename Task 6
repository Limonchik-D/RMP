import React, { useState } from 'react';
import { StyleSheet, View, Button } from 'react-native';

export default function App() {
  const [squareColor, setSquareColor] = useState<string>('black'); // Начальный цвет квадрата

  return (
    <View style={styles.container}>
      <View style={[styles.square, { backgroundColor: squareColor }]} />
      <View style={styles.buttonContainer}>
        <Button
          title="Красный"
          color="red"
          onPress={() => setSquareColor('red')}
        />
        <Button
          title="Зеленый"
          color="green"
          onPress={() => setSquareColor('green')}
        />
      </View>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    alignItems: 'center',
    justifyContent: 'center',
    backgroundColor: '#fff',
  },
  square: {
    width: 100,
    height: 100,
  },
  buttonContainer: {
    marginTop: 20,
    gap: 10, // Расстояние между кнопками
  },
});
